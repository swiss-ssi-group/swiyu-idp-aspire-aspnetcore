@page
@model Idp.Swiyu.IdentityProvider.Pages.Login.LoginModel
@{
}

<div class="container my-5">
    <div class="row justify-content-center" id="verifiedDataButton">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary-card text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div>
                        <a href="https://www.bcs.admin.ch/bcs-web/">Get your swiyu public Beta-ID credentials here</a>
                    </div>
                </div>
                <div class="card-footer">

                    <div>
                        <a href="https://www.eid.admin.ch/de/public-beta">Download swiyu wallet</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4" id="verifiedDataCard" style="display:none">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary-card text-white">
                    <h4 class="mb-0">Verified swiyu public Beta-ID data:</h4>
                </div>
                <div class="card-body">
                    <div id="verifiedData"></div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.QrCodePng.Length > 0)
    {
        <div class="row justify-content-center mt-4" id="qrCodeImage">
            <div class="col-md-8 text-center">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">QR Code</h5>
                        <img alt="qr code" width="300" src="data:image;base64,@System.Convert.ToBase64String(Model.QrCodePng)" class="img-fluid" />
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.VerificationId != null)
    {
        <form method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <input type="hidden" asp-for="VerificationId" />
            <button type="submit" class="btn btn-outline-dark">Start polling</button>
        </form>
    }
</div>
